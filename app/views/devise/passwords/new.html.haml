- provide(:title, 'Forgot your password?')

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.email_field :email, autofocus: true, class: 'form-control'

  .form-group
    .col-sm-6.col-sm-offset-2
      = f.submit 'Send me reset password instructions', class: 'btn btn-default'

  .form-group
    .col-sm-6.col-sm-offset-2
      = render 'devise/shared/links'